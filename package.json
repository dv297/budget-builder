{
  "name": "node-js-getting-started",
  "version": "0.3.0",
  "description": "A sample Node.js app using Express 4",
  "engines": {
    "node": "8.9.1"
  },
  "main": "index.js",
  "scripts": {
    "format": "prettier --write --config prettier.config.js \"{index.js,{database,graphql}/**/*.js}\"",
    "dev": "npm-run-all --parallel dev:server compile:client:watch",
    "dev:client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "dev:server": "nodemon src/server/index.js",
    "compile:client": "webpack --mode production",
    "compile:client:watch": "webpack --mode development --watch",
    "start": "node index.js",
    "test": "node test.js"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "ejs": "^2.5.6",
    "express": "^4.15.2",
    "express-graphql": "^0.6.12",
    "express-session": "^1.15.6",
    "graphql": "^0.13.2",
    "graphql-tools": "^2.23.1",
    "html-webpack-harddisk-plugin": "^0.2.0",
    "immer": "^1.2.1",
    "jsonwebtoken": "^8.2.1",
    "lodash.merge": "^4.6.1",
    "mongodb": "^3.0.5",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.17.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "request": "^2.81.0",
    "style-loader": "^0.21.0",
    "tape": "^4.7.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3",
    "webpack-hot-middleware": "^2.22.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heroku/node-js-getting-started"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "license": "MIT"
}
